<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="citruspay.citrus.com.blazenetdemo.MainActivity">




    <RadioGroup
        android:id="@+id/radioBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:checkedButton="@+id/radioMale"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioICICI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICICI"
            android:layout_alignTop="@+id/radioBank"
            android:layout_alignLeft="@+id/radioBank"
            android:layout_alignStart="@+id/radioBank" />

        <RadioButton
            android:id="@+id/radioAXIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="AXIS"
            android:layout_alignTop="@+id/radioBank"
            android:layout_alignLeft="@+id/radioIDBI"
            android:layout_alignStart="@+id/radioIDBI" />

        <RadioButton
            android:id="@+id/radioSBI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SBI"
            android:layout_alignTop="@+id/radioIDBI"
            android:layout_alignLeft="@+id/radioBank"
            android:layout_alignStart="@+id/radioBank" />

        <RadioButton
            android:id="@+id/radioIDBI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="IDBI"
            android:layout_above="@+id/radioBank"
            android:layout_toLeftOf="@+id/btnPay"
            android:layout_toStartOf="@+id/btnPay" />


    </RadioGroup>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioBank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Pay" />


</RelativeLayout>
